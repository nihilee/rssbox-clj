<configuration>

    <!-- 1. 控制台输出 (开发调试用) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 2. 文件输出 (生产环境用，带轮转) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 当前正在写入的日志文件 -->
        <file>logs/rssbox.log</file>

        <!-- 轮转策略：基于时间 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 归档文件名格式：rssbox.2024-05-10.log -->
            <fileNamePattern>logs/rssbox.%d{yyyy-MM-dd}.log</fileNamePattern>
            
            <!-- 只保留最近 30 天的日志，旧的自动删除 -->
            <maxHistory>30</maxHistory>
            
            <!-- 总日志大小不超过 1GB (可选保护) -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 3. 设置日志级别 -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

    <!-- 屏蔽一些啰嗦的库日志 -->
    <logger name="org.apache.http" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>

</configuration>
